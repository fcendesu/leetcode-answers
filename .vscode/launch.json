{
    "version": "0.2.0",
    "configurations": [
        {
           "type": "node",
            "request": "launch",
            "name": "Run TS File",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": ["-r", "ts-node/register"],
            "args": ["${file}"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"  // Add this line
        }
    ]
}